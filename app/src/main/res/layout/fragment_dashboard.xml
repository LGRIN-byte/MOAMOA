<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/dashboard"><!--좀 되라-->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/dashboardtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#ffffff"
                app:titleTextColor="@color/black" />
            <TextView
                android:id="@+id/dashboardbarname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"

                android:text="공동구매 글쓰기"
                android:textSize="20sp" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/button_imgs"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:drawableTop="@drawable/ic_baseline_photo"
                    android:text="0/10"
                    android:onClick="onClick"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/num_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"  />
            </LinearLayout>

            <GridView
                android:id="@+id/photo_dash"
                android:layout_width="173dp"
                android:layout_height="145dp"
                android:layout_marginLeft="10dp"
                android:columnWidth="50dp"
                android:numColumns="10"
                android:orientation="horizontal"
                android:stretchMode="none"
                android:visibility="gone" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:background="@drawable/formdetail_profile_bottomline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                android:src="@android:mipmap/sym_def_app_icon"
                android:visibility="gone"
                />


            <EditText
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="제목"
                android:maxLength="20"
                android:textSize="16sp"
                android:background="@drawable/formdetail_profile_bottomline"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="16sp"
                android:entries="@array/category"
                android:background="@drawable/formdetail_profile_bottomline"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/formdetail_profile_bottomline">
                <TextView
                    android:id="@+id/dashboard_won_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:text="￦"/>
                <EditText
                    android:id="@+id/cost"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="가격"
                    android:textSize="16sp"
                    android:inputType="number"
                    android:minWidth="100dp"
                    android:background="@null"/>

            </LinearLayout>

            <EditText
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="내용"
                android:textSize="16sp"
                android:minHeight="200dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/formdetail_profile_bottomline"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/radioGroup"
                android:layout_marginVertical="5dp"
                android:background="@drawable/formdetail_profile_bottomline">
                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="직거래만"/>
                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="택배/비대면"                />
                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="둘 다 가능" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="인원제한 없음"
                android:background="@drawable/formdetail_profile_bottomline"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="인원"
                android:id="@+id/max_count"
                android:inputType="number"
                android:textSize="16sp"
                android:background="@drawable/formdetail_profile_bottomline"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/formdetail_profile_bottomline">

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:hint="거래 장소"
                    android:textSize="16sp"
                    android:background="@drawable/formdetail_profile_bottomline"/>
                <Button
                    android:id="@+id/button_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수정" />
            </LinearLayout>
            <EditText
                android:id="@+id/address_detail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:maxLength="20"
                android:layout_weight="2"
                android:hint="상세정보(선택)"
                android:textSize="16sp"
                android:background="@drawable/formdetail_profile_bottomline"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="시작일자"/>
                <TextView
                    android:id="@+id/text_dashboardstart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="시작일자"
                    android:textSize="15sp"
                    android:inputType="date" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="마감일자" />

                <TextView
                    android:id="@+id/text_dashboardend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="마감일자"
                    android:textSize="15sp"
                    android:onClick="showDatePicker"
                    android:inputType="date" />

            </LinearLayout>
            <Button
                android:id="@+id/button_dashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="@color/main_orange"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:text="글 올리기"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>