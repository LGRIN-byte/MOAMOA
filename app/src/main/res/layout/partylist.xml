<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.moamoa.ui.formdetail.DetailCreaterSideActivity">
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/main_green">
            <TextView
                android:id="@+id/partylist_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="참여자 목록"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:paddingHorizontal="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/partylist_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="NN"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="명"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="10dp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <ListView
            android:id="@+id/partylist_view"
            android:layout_width="match_parent"
            android:layout_height="350dp"/>
        <Button
            android:id="@+id/partylist_closebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:background="@drawable/round_border_style"
            android:backgroundTint="@color/main_green"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:text="닫기"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>