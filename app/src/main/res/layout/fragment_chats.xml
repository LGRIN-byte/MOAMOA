<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@color/main_green">

            <!--뒤로가기-->
            <ImageView
                android:id="@+id/btn_backpage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@drawable/ic_outline_arrow_back_ios_24"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:clickable="true"
                android:focusable="true" />

            <!--채팅방 제목--><!--클릭하면 참가자리스트 나오게끔-->
            <!--maxLines, ellipsize: 글자수 초과시 말줄임 표시-->
            <TextView
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:text="채팅방 제목"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:maxLines="1"
                android:ellipsize="end"

                android:stateListAnimator="@null"
                android:gravity=""/>

            <ImageView
                android:id="@+id/button_chatssetting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_outline_dehaze_24"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chats_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            >
        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:weightSum="1"

            android:paddingLeft="16dp"
            android:paddingRight="16dp"

            >
            <!--입력 창-->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_chat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                />
            <!--SEND-->
            <Button
                android:id="@+id/button_sendmsg"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:text="SEND"
                android:background="@color/main_green"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>