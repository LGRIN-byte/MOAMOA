<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/formdetail_profile_bottomline"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/party_profileimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginVertical="5dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/party_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="작성자"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/party_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9월 12일 03:15"
                    android:textSize="11sp"
                    android:textColor="@color/dark_gray"
                    android:layout_marginRight="5dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="참가"
                    android:textColor="@color/dark_gray"
                    android:textSize="11sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/party_lastchat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="마지막 채팅 내용이 들어가면 괜찮지 않을까라는 생각을 해본다"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:layout_marginRight="20dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>