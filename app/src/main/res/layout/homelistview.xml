<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/homelist_mainImage"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:scaleType="center"
        android:background="@drawable/homelistview_image_border"
        android:clipToOutline="true"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/homelist_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="카테고리"
            android:textSize="12sp"
            android:textColor="@color/cardview_dark_background"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:paddingHorizontal="4dp"
            android:textColor="@color/cardview_dark_background"/>
        <TextView
            android:id="@+id/homelist_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지역"
            android:textSize="12sp"
            android:textColor="@color/cardview_dark_background" />
    </LinearLayout>
    <TextView
        android:id="@+id/homelist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="제목"
        android:textSize="15sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/homelist_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="D-1"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:layout_gravity="right"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">

        </View>

        <TextView
            android:id="@+id/homelist_mans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="9/10"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/homelist_FID"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/homelist_UID"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</LinearLayout>
