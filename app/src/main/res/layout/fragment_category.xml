<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/my_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="관심 카테고리"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/moveto_mygroup"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/my_category"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_baseline_chevron_right_24" />

        <TextView
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/category_edit_style"
            android:layout_centerVertical="true"
            android:text="편집"
            android:textSize="15sp" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="4"
        android:useDefaultMargins="true">
        <Button
            android:id="@+id/all_group1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:text="전체" />

        <Button
            android:id="@+id/my_group1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:text="관심" />

        <Button
            android:id="@+id/food_group1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:text="식품" />

        <Button
            android:id="@+id/dailyitems_group1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:text="생활"
            />

        <Button
            android:id="@+id/clothes_group1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:text="의류" />

        <Button
            android:id="@+id/appliance_group1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:text="가전" />

        <Button
            android:id="@+id/game_group1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:text="취미" />

        <Button
            android:id="@+id/sports_group1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:text="운동" />

        <Button
            android:id="@+id/goods_group1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:text="굿즈" />

        <Button
            android:id="@+id/pets_group1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:text="동물" />

        <Button
            android:id="@+id/etc_group1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:text="기타" />

    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/all_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="전체 카테고리"
            android:textSize="16sp" />

    </RelativeLayout>

    <GridView
        android:id="@+id/category_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:numColumns="4"
        android:layout_gravity="center"
        android:layout_marginLeft="14dp"
        android:gravity="center">
    </GridView>


</LinearLayout>